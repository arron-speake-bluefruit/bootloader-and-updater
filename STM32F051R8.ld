/* Common information shared between both linker scripts. */

STACK_SIZE = 0x1000;
FLASH_SIZE = 0x10000;
RAM_SIZE = 0x2000;
RAM_ORIGIN = 0x20000000;

BOOTLOADER_SIZE = 0x1000; /* 4KiB flash sectors. this can't be any smaller */
APPLICATION_SIZE = 0x2000; /* 8 KiB */
UPDATE_REGION_SIZE = APPLICATION_SIZE;

BOOTLOADER_ORIGIN = 0x08000000;
APPLICATION_ORIGIN = BOOTLOADER_ORIGIN + BOOTLOADER_SIZE;
UPDATE_REGION_ORIGIN = APPLICATION_ORIGIN + APPLICATION_SIZE;

ENTRY(reset_handler);
